<div class="page-header">
	<h3 class="coutnry-list-title">
 		Geographical List of countries
	</h3>
		<% @country_list.each_slice(4) do |country_batch| %>
				<div class="row">
					<div class="span12">
						<% country_batch.each do  |country| %>
							<div class="span3 country-grid">
								<a href=<%="/country/#{country['alpha2Code']}" %>>
									<div class="country-block">
										<ul class="country">
											<li class="country-name"><h4><%= "#{country['name']}" %></h4> </li>	
											<li class="capital"><h6><%= "#{country['capital']}" %></h6></li>
											<li class="region"><%= "#{country['region']}" %></li>	
										</ul>
									</div>
								</a>
							</div>
						<% end %>
					</div>
				</div>
		<% end %>
	<p>
	</p>
</div>



 
	  

 
